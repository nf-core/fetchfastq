nextflow_process {

    name "Test Process SRA_FASTQ_FTP"
    script "modules/local/sra_fastq_ftp.nf"
    process "SRA_FASTQ_FTP"
    tag "sra_fastq_ftp"

    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = [
                            [ id:'SRX9626017_SRR13191702', single_end:false ], // meta map
                            [ SRR13191702 ]
                        ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

}

nextflow_process {

    name "Test Process SRA_TO_SAMPLESHEET"
    script "modules/local/sra_to_samplesheet.nf"
    process "SRA_TO_SAMPLESHEET"
    tag "sra_to_samplesheet"

    test("Should run without failures") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[1] =
                input[2] =
                input[3] =
                input[4] = file("$baseDir/modules/local/tests/input/sra_to_samplesheet/SRX9626017_SRR13191702.mappings.csv", checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
            )
        }

    }

}
